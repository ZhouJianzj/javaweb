<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    加入购物车-->
    <servlet>
        <servlet-name>addGouWuCheServlet</servlet-name>
        <servlet-class>com.jianZhou.controller.addGouWuCheServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGouWuCheServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
<!--    看购物车-->
    <servlet>
        <servlet-name>LookGouWuCheServlet</servlet-name>
        <servlet-class>com.jianZhou.controller.LookGouWuCheServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LookGouWuCheServlet</servlet-name>
        <url-pattern>/look</url-pattern>
    </servlet-mapping>
<!--    欢迎界面-->
    <welcome-file-list>
        <welcome-file>gouWu.html</welcome-file>
    </welcome-file-list>
</web-app>